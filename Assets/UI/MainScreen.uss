* {
    -unity-font: url("project://database/Assets/Fonts/Roboto-Regular.ttf");
    -unity-font-definition: url("project://database/Assets/Fonts/Roboto-Regular SDF.asset");

}



.my-button {
    color: white;
    background-color: lightblue;
    font-size: 42px;
    padding: 5px;
    margin-top: 10px;
    border-radius: 15px;
    border-color: lightblue;
    white-space: normal;
    overflow: visible;
}

.my-foldout {
    min-height: 60px;
    color: black;
    background-color: white;
    font-size: 42px;
}

.my-scrollview {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

.my-scrollview.scrollbar_groove {
    display: none;
}

#unity-low-button {
    display: none;
}

#unity-high-button {
    display: none;
}

#container #unity-tracker {
    display: none;
}

#Slider #unity-tracker {
    background-color: rgb(56, 122, 223);
    border-color: rgb(255, 255, 255);
    border-width: 2px;
}

#Slider #unity-dragger {
    background-color: rgb(0, 0, 255);
    border-color: #DCDCDC;
    border-width: 2px;
    border-radius: 50%; /* Make it a circle */
    border-style: solid;
    width: 40px; /* Adjust the size */
    height: 40px; /* Adjust the size */
    max-height: none; /* Override any max-height restrictions */
}

#unity-dragger {
    background-color: lightgray;
    border-radius: 6px;
    max-height: 400px;
}

.my-toggle-button {
    color: lightblue;
    font-size: 40px;
    margin-right: 20px;
    align-self: flex-end;
    margin-bottom: 5px;
}

.toggleInput .unity-toggle__checkmark {
    display: none;
    opacity: 0;
    background-color: red;
}

.unity-base-dropdown__item {
    background-color: transparent;
    border-width: 0;
}

.unity-base-dropdown__item .unity-label {
    color: blue;
}

.unity-base-dropdown .unity-scroll-view {
    background-color: transparent;
    border-width: 0;
}

.unity-base-dropdown__container-outer {
    background-color: transparent;
    border-width: 0;
}

.unity-base-popup-field:hover > .unity-base-popup-field__input {
    background-color: transparent;
    border-width: 0;
}

.unity-base-popup-field:active {
    background-color: transparent;
    border-width: 0;
}

.unity-base-field__input {
    background-color: transparent;
    border-width: 0;
}

.unity-base-popup-field:active > .unity-base-popup-field__input {
    background-color: transparent;
    border-width: 0;
}

.unity-base-popup-field__arrow {
    display: none;
}

#fastforward {
    background-size: cover;
    width: 100px;
    height: 100px;
}

#fastbackward {
    background-size: cover;
    width: 100px;
    height: 100px;
}

.ui_page {
    flex-direction: column;
}

.back_button_style {
    background-size: cover;
    background-color: transparent;
    max-width: 100px;
    background-image: resource('icons/left-arrow');
    max-height: 100px;
    height: 50px;
    width: 50px;
    transition: transform 0.1s ease-in-out;
}

#expandall > .unity-base-field__label {
    min-width: 60px;
}
